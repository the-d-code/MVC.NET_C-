@model MVC_Crud_Entity_Framework.Models.Student

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Student</legend>

    <div class="display-label">sname</div>
    <div class="display-field">@Model.sname</div>

    <div class="display-label">sem</div>
    <div class="display-field">@String.Format("{0:F}", Model.sem)</div>

